<?xml version="1.0" encoding="UTF-8"?>
<forms:BaseContentPage
    xmlns:forms="clr-namespace:Storm.Mvvm.Forms;assembly=Storm.Mvvm.Forms"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AlbumLieux.Pages.LoginPage">
    <StackLayout Orientation="Vertical" >
        <Label Text="Email" />
        <Entry Text="{Binding Email, Mode=TwoWay}" Keyboard="Email"/>
        <Label Text="Password" />
        <Entry Text="{Binding Password, Mode=TwoWay}" IsPassword="True" Keyboard="Plain"/>
        <Button Text="Se connecter" Clicked="Connect" HorizontalOptions="Center" Padding="18,6,18,6" CornerRadius="6"/>
    </StackLayout>
</forms:BaseContentPage>